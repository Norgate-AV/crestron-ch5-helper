{
    "name": "@norgate-av/crestron-ch5-helper",
    "description": "A helper collection of Crestron CH5 constants ðŸ˜€",
    "version": "1.2.0",
    "keywords": [
        "ch5",
        "crestron",
        "typescript",
        "helper"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "module": "dist/crestron-ch5-helper.esm.js",
    "typings": "dist/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/Norgate-AV-Solutions-Ltd/crestron-ch5-helper.git"
    },
    "bugs": {
        "url": "https://github.com/Norgate-AV-Solutions-Ltd/crestron-ch5-helper/issues"
    },
    "files": [
        "dist"
    ],
    "engines": {
        "node": ">=14"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "yarn clean && tsdx build",
        "test": "tsdx test --passWithNoTests",
        "lint": "tsdx lint",
        "lint:fix": "tsdx lint --fix",
        "prepare": "husky install",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "clean": "rimraf dist",
        "semantic-release": "semantic-release",
        "commit": "git-cz",
        "pretty:fix": "prettier --write .",
        "doctoc": "doctoc --title '## Contents ðŸ“–' README.md",
        "contrib:add": "all-contributors add",
        "contrib:generate": "all-contributors generate",
        "contrib:check": "all-contributors check"
    },
    "peerDependencies": {},
    "size-limit": [
        {
            "path": "dist/crestron-ch5-helper.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/crestron-ch5-helper.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.0.1",
        "@commitlint/config-conventional": "^17.0.0",
        "@semantic-release/changelog": "^6.0.1",
        "@semantic-release/git": "^10.0.1",
        "@size-limit/preset-small-lib": "^8.0.0",
        "@types/rimraf": "^3.0.2",
        "all-contributors-cli": "^6.20.0",
        "cz-conventional-changelog": "3.3.0",
        "doctoc": "^2.1.0",
        "husky": "^8.0.0",
        "lint-staged": "^13.0.1",
        "rimraf": "^3.0.2",
        "semantic-release": "^19.0.2",
        "size-limit": "^8.0.0",
        "tsdx": "^0.14.1",
        "tslib": "^2.3.1",
        "typescript": "^4.6.3"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "yarn lint:fix",
            "yarn pretty:fix"
        ],
        "*.{css,scss,md,html,json,yml,yaml}": [
            "yarn pretty:fix"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
